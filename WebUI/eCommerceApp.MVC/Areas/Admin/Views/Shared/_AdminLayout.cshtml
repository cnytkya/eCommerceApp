            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        <img style="width:120px;height:120px" class="rounded-circle m-auto"
                        <img src="~/img/account/business-woman.png" />
                        <h4 class="text-center text-white mt-2">Mehtap Önder</h4>
                        <a class="nav-link text-white" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt text-white"></i></div>
                            Dashboard
                        </a>
                        <div class="sb-sidenav-menu-heading">Product & Category</div>
                        <a class="nav-link text-white" href="charts.html">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-store text-white"></i></div>
                            Product
                        </a>
                        <a class="nav-link text-white" href="tables.html">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-list text-white"></i></div>
                            Category
                        </a>
                        <div class="sb-sidenav-menu-heading">Addons</div>
                        <a class="nav-link text-white" asp-controller="Users" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-users text-white"></i></div>
                            Users
                        </a>
                        <a class="nav-link text-white" href="tables.html">
                            <div class="sb-nav-link-icon"><i class="fa-brands fa-critical-role text-white"></i></div>
                            Roles
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    Start Bootstrap
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/sbadmin/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/sbadmin/assets/demo/chart-area-demo.js"></script>
    <script src="~/sbadmin/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/sbadmin/js/datatables-simple-demo.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script>
        // Toastr ayarları
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        // TempData'dan gelen mesajları göster
        // Bu kısım, Login gibi işlemler sonrası yönlendirmelerde kullanılacak.
        var successMessage = '@TempData["SuccessMessage"]';
        if (successMessage && successMessage.trim() !== '') {
            toastr.success(successMessage);
        }

        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage && errorMessage.trim() !== '') {
            toastr.error(errorMessage);
        }

        // İsteğe bağlı olarak bilgi ve uyarı mesajları için de ekleyebilirsiniz
        // var infoMessage = '@TempData["InfoMessage"]';
        // if (infoMessage && infoMessage.trim() !== '') {
        //     toastr.info(infoMessage);
        // }

        // var warningMessage = '@TempData["WarningMessage"]';
        // if (warningMessage && warningMessage.trim() !== '') {
        //     toastr.warning(warningMessage);
        // }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
