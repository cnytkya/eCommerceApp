@model CreateUserDto

@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
}

<div class="container-fluid px-4">
    <h1 mt-4>Kullanıcı Ekle</h1> @*mt-4  üstten margin(boşluk) ekler*@
    <ol class="breadcrumb mb-4">
        @*mb-4  alttan margin(boşluk) ekler*@
        <li class="breadcrumb-item"><a asp-controller="Main" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item">
            <a asp-controller="Users" asp-action="Index">Kullanıcılar</a>
        </li>
        <li class="breadcrumb-item active">Yeni Kullanıcı Ekle</li>
    </ol>

    <div class="card mb-4">
        @* card header *@
        <div class="card-header">
            <i class="fas fa-user-plus me-1"></i>
            Yeni Kullanıcı Formu
        </div>
        @* card body (form kısmı)*@
        <div class="card-body">
            <form asp-controller="Users" asp-action="Create" method="post">
                @* dış tehditlere karşı koruma  *@
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="Fullname" class="form-label"></label>
                    <input asp-for="Fullname" class="form-control" />
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" autocomplete="new-username"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Bio" class="form-label"></label>
                    <textarea asp-for="Bio" class="form-control" autocomplete="new-password"></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="selectedRole" class="form-label">Role Seç</label>
                    <select name="selectedRole" id="selectedRole" class="form-select" asp-items="@ViewBag.Roles">
                        <option value="">-- Role Seçiniz --</option>
                    </select>
                    <span class="text-danger" data-valmsg-for="selectedRole"></span> @* role seçimi validasyonu için *@
                </div>
                <div class="mb-3">
                    <input asp-for="IsActive" class="form-check-input" />@* asp-for ile IsActive'e bağlandı *@
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>
                <div class="mb-3">
                    <label asp-for="ImgUrl" class="form-label"></label>
                    <input asp-for="ImgUrl" class="form-control"/>
                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Location" class="form-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Kaydet
                </button>
                <a class="btn btn-secondary" asp-controller="Users" asp-action="Index">
                    <i class="fas fa-times"></i>
                    İptal
                </a>
            </form>
        </div>
    </div>
</div>
