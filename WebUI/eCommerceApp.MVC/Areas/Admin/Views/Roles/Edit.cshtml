@model EditRoleDto

@* @{
    ViewData["Title"] = "Role Düzenle";
} *@

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1> @*mt-4  üstten margin(boşluk) ekler*@
    <ol class="breadcrumb mb-4">
        @*mb-4  alttan margin(boşluk) ekler*@
        <li class="breadcrumb-item"><a asp-controller="Main" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item">
            <a asp-controller="Roles" asp-action="Index">Roller</a>
        </li>
        <li class="breadcrumb-item active">Role Düzenle</li>
    </ol>

    <div class="card mb-4">
        @* card header *@
        <div class="card-header">
            <i class="fas fa-user-plus me-1"></i>
            Role Düzenleme Formu
        </div>
        @* card body (form kısmı)*@
        <div class="card-body">
            <form asp-controller="Roles" asp-action="Edit" method="post">

                @* dış tehditlere karşı koruma  *@
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id"/> @* Role ID'sini gizli olarak gönderiyoruz. *@
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i>
                    Güncelle
                </button>
                <a class="btn btn-secondary" asp-controller="Roles" asp-action="Index">
                    <i class="fas fa-times"></i>
                    İptal
                </a>
            </form>
        </div>
    </div>
</div>
