@model SubCategoryDto

@{
    ViewData["Title"] = "Alt Kategori Silme Onayı"; @* Sayfa başlığı *@
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Main" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Categories" asp-action="Index">Kategoriler</a></li>
        <li class="breadcrumb-item active">Sil</li> @* Aktif sayfa başlığı *@
    </ol>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            @* Başlık kısmı, silme işlemi olduğu için kırmızı arkaplan ve uyarı ikonu *@
            <i class="fas fa-exclamation-triangle me-1"></i>
            Alt Kategori Silme Uyarısı
        </div>
        <div class="card-body">
            @* Kullanıcıya silme işleminin soft delete olduğunu belirten açıklama *@
            <p class="mb-3">Aşağıdaki kategoriyi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>

            @* Kategori detay bilgilerini görüntüleme *@
            <dl class="row">
                <dt class="col-sm-3">Alt Kategori Adı:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Açıklama:</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Slug:</dt>
                <dd class="col-sm-9">@Model.Slug</dd>


            </dl>

            <hr /> @* Ayırıcı çizgi *@

            @* Silme işlemini tetikleyecek POST formu *@
            <form asp-controller="Subcategory" asp-action="Delete" method="post">
                @Html.AntiForgeryToken() @* CSRF saldırılarına karşı koruma için Anti-Forgery Token *@

                @* Silinecek kullanıcının ID'sini gizli bir input alanı olarak gönderiyoruz *@
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CategoryId" />

                @* Silme ve İptal Butonları *@
                <button type="submit" class="btn btn-danger me-2"><i class="fas fa-trash"></i> Sil</button>
                <a asp-area="Admin" asp-controller="Subcategory" asp-action="Index" asp-route-id="@Model.CategoryId" class="btn btn-secondary"><i class="fas fa-times"></i> İptal</a>
            </form>
        </div>
    </div>
</div>