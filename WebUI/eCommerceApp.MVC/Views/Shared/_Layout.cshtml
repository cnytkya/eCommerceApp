<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eCommerceApp.MVC.styles.css" asp-append-version="true" />
    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-modern fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="logo-image d-inline-block align-text-top me-2 rounded-circle" style="height:45px;width:75px" src="/img/logo/logo.png" alt="Logo">
                    <span class="brand-text">E-Trade</span>
                </a>

                <div class="search-container d-none d-lg-block">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" class="search-input" placeholder="Search products...">
                </div>

                <div class="d-flex align-items-center">
                    <a href="#" class="cart-icon">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="cart-count">3</span>
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="search-container d-lg-none mb-3">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" class="search-input" placeholder="Search products...">
                    </div>

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item dropdown mega-dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categories
                            </a>
                            @await Component.InvokeAsync("CategoryMenu")
                        </li>
                    </ul>
                    <div class="d-flex flex-column flex-lg-row">
                        <a class="btn btn-login me-lg-2 mb-2 mb-lg-0" asp-area="Admin" asp-controller="Account" asp-action="Login">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                        <a class="btn btn-register" asp-area="Admin" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus me-2"></i>Register
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-modern">
        <div class="container">
            <div class="footer-content">
                <div class="footer-column">
                    <h5>E-Trade</h5>
                    <p>Modern alışveriş deneyimini keşfedin. En kaliteli ürünler, hızlı teslimat ve güvenli alışveriş.</p>
                    <div class="social-links">
                        <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="footer-column">
                    <h5>Hızlı Linkler</h5>
                    <ul class="footer-links">
                        <li><a href="#"><i class="fas fa-chevron-right"></i>Ana Sayfa</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right"></i>Hakkımızda</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right"></i>Ürünler</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right"></i>İletişim</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h5>Müşteri Hizmetleri</h5>
                    <ul class="footer-links">
                        <li><a href="#"><i class="fas fa-chevron-right"></i>Sıkça Sorulan Sorular</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right"></i>İade Politikası</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right"></i>Gizlilik Politikası</a></li>
                        <li><a href="#"><i class="fas fa-chevron-right"></i>Şartlar ve Koşullar</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h5>İletişim</h5>
                    <ul class="footer-links">
                        <li><a href="#"><i class="fas fa-map-marker-alt"></i>İstanbul, Türkiye</a></li>
                        <li><a href="tel:+905551234567"><i class="fas fa-phone"></i>+90 (555) 123-4567</a></li>
                        <li><a href="mailto:info@etrade.com"><i class="fas fa-envelope"></i>info@etrade.com</a></li>
                        <li><a href="#"><i class="fas fa-clock"></i>7/24 Müşteri Desteği</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 E-Trade - Tüm hakları saklıdır. <a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik Politikası</a></p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar-modern');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Active nav link
        document.addEventListener('DOMContentLoaded', function() {
            const currentLocation = location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                if(link.getAttribute('href') === currentLocation) {
                    link.classList.add('active');
                }
            });

            // Mega dropdown hover effect
            const megaDropdown = document.querySelector('.mega-dropdown');
            const megaMenu = document.querySelector('.mega-menu');

            if (megaDropdown && megaMenu) {
                megaDropdown.addEventListener('mouseenter', function() {
                    megaMenu.style.display = 'block';
                });

                megaDropdown.addEventListener('mouseleave', function() {
                    megaMenu.style.display = 'none';
                });
            }
        });

        // Toastr ayarları
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        // TempData'dan gelen mesajları göster
        var successMessage = '@TempData["SuccessMessage"]';
        if (successMessage && successMessage.trim() !== '') {
            toastr.success(successMessage);
        }

        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage && errorMessage.trim() !== '') {
            toastr.error(errorMessage);
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>